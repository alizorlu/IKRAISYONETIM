@model IEnumerable<Ikra_Is_Yonetim.DAL.EntityFramework.Tables.Siparisler>
<div class="card">
    <div class="card-header p-2 text-center">
        <div class="h4 m-0 text-center">
            Toplam Sipariş Adedi
        </div>
    </div>
    <div class="card-body p-3 text-center">
        <div class="h1 m-0">
            @{ 
                if (Model==null)
                {
                        <span>
                            0
                        </span>
                }
                else
                {
                        <span>@Model.Count()</span>
                }
            }
        </div>
        <div class="text-muted mb-4">Sipariş verdiniz.</div>
    </div>
    <div class="card-footer text-center">
        <a href="/order" class="btn btn-info btn-sm">
            Sipariş geçmişinizi inceleyin
        </a>
    </div>
</div>
