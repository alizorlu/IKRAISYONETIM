@model IEnumerable<Ikra_Is_Yonetim.DAL.EntityFramework.Tables.Siparisler>

@{
    decimal borcTutar = 0m;
    if (Model.Count() > 0)
    {
        borcTutar =
           Model.Sum(s => s.YemekSayisi * s.Musteri.GunlukYemekFiyati);
    }
    <div class="card">
        <div class="card-header p-2 text-center">
            <div class="h4 m-0 text-center">
                Borcunuz
            </div>
        </div>
        <div class="card-body p-3 text-center">
            <div class="h1 m-0">@Html.DisplayFor(s=>borcTutar) TL</div>
            <div class="text-muted mb-4">Ödenmesi gereken tutar</div>
        </div>
        <div class="card-footer text-center">
            <a href="/paid/getProfile" class="btn btn-info btn-sm">
                Ödeme geçmişinizi inceleyin
            </a>
        </div>
    </div>
}

