@model Ikra_Is_Yonetim.DAL.EntityFramework.Tables.Yemekler

@{ 
    if (Model!=null)
    {
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@Html.DisplayFor(s=>Model.YemekAdi)</h3>
           
           
        </div>
        <div class="card-body">
            <strong>Menü Bilgisi :</strong>&nbsp;<span class="font-weight-light">
                @Html.DisplayFor(s => Model.YemekAciklamasi)
            </span><br />
            <strong>Porsiyon Bilgisi :</strong>&nbsp;<span>
                @Html.DisplayFor(s => Model.PorsiyonGr) gr
            </span><br />
            <strong>Malzemeler ;</strong><br />
            @foreach (var item in Model.Malzemeler)
            {
                <span>- @Html.DisplayFor(s=>item.Stok.StokAdi)</span><br />
            }
        </div>
        <div class="card-footer">
            <em>Günün yemeğine ait ayrıntılar.</em>
        </div>
    </div>
    }
}
